@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">Workout Planner</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
            </ul>
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
                <AuthorizeView>
                    <Authorized>
                        <li class="navbar-text">@context.User.Identity?.Name</li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Logout" Match="NavLinkMatch.All">Logout</NavLink>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<!-- Buttons section -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <AuthorizeView>
        <NotAuthorized>
            <div class="text-center">
                <a href="/Account/Login" class="btn btn-primary btn-lg m-2">Login</a>
                <a href="/Account/Register" class="btn btn-secondary btn-lg m-2">Register</a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

<main class="container">
    <div class="p-2 rounded">
        @Body
    </div>
</main>