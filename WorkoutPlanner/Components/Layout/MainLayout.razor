@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@using WorkoutPlanner.Components.Pages
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg" style="background-color: #6a8fa0; color: #ffffff;">
    <div class="container">
        <a class="navbar-brand" href="/" style="color: #ffffff;">Workout Planner</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="color: #6a8fa0;"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All" style="color: #ffffff;">Home</NavLink>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/plan" Match="NavLinkMatch.All" style="color: #ffffff;">Plan</NavLink>
                </li>
            </ul>
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
                <AuthorizeView>
                    <Authorized>
                        <li class="navbar-text" style="color: #ffffff;">@context.User.Identity?.Name</li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Logout" Match="NavLinkMatch.All" style="color: #ffffff;">Logout</NavLink>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>



    <main class="mb-4">
        @Body
    </main>




    